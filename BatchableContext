//  SO YOU CAN CLONE THIS CLASS TO UPDATE THE OBJECT OF A WIGGLE, HOWEVER IT IS DEFINED BY THE USER
//  STILL USE HOURLY TIC-TOCS TO UPDATE WIGGLES (A TIME-BASED WORKFLOW FOR EVERYONE THAT IS DEFINED AND ACTIVE)
//  AND THEN ACCOUNTS WILL BE UPDATED IN WHATEVER FASHION IS DEFINED
//  I GLOMMED THIS FROM SOMEBODY, AND I DON'T HAVE A PARTICULAR USE FOR IT.. 

global class BulkUpdateSomeObject implements Database.Batchable<sObject> {
    global Database.QueryLocator start(Database.BatchableContext BC) {

//    USE YOUR DYNAMIC QUERY STRING HERE... ONLY QUESTION IS... HOW AM I GOING TO PASS THOSE VALUES INTO A FUTURE METHOD?
        
        String query = 'SELECT Id, Name FROM Account';
        return Database.getQueryLocator(query);
    }
    
    global void execute(Database.BatchableContext BC, List<sObject> scope) {
        
        list<sObject> acclist = new list<sObject>();
        for(sObject a : scope){
//            a.status__c= 'Inactive';
            acclist.add(a);
            
        }
        
        update acclist;
        
    }
    
    global void finish(Database.BatchableContext BC) {

//    SO HERE YOU DEFINE ANY ACTIONS THAT YOU WANT TO INVOKE UPON COMPLETION OF THE BATCH METHODS
//    THIS MIGHT INCLUDE EMAIL TO ADMIN, OR SOME SUCH
//    OBVIOUSLY, IT CAN ALSO BE LEFT BLANK        
        
    }
    
}

